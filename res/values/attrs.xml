<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="radius" format="reference|dimension" />
    <attr name="color" format="reference|color" />
    <declare-styleable name="CircleView">
        <attr name="radius" />
        <attr name="color" />
    </declare-styleable>
    <declare-styleable name="TextViewWithDrawable">  
        <attr name="left_height" format="dimension" />  
        <attr name="left_width" format="dimension" />  
        <attr name="right_height" format="dimension" />  
        <attr name="right_width" format="dimension" />  
        <attr name="top_height" format="dimension" />  
        <attr name="top_width" format="dimension" />  
        <attr name="bottom_height" format="dimension" />  
        <attr name="bottom_width" format="dimension" />  
    </declare-styleable>
    <declare-styleable name="DoubleTextCircle">
        <attr name="first_text" format="string"/>
        <attr name="second_text" format="string"/>
        <attr name="circle_radius" format="dimension"/>
        <attr name="circle_color" format="color"/>
        <attr name="textsize" format="dimension"/>
    </declare-styleable>  
</resources>
